<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<ProgressBar
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerInParent="true"
		android:layout_marginBottom="@dimen/splash_progress_mbottom"
		android:id="@+id/splashProgressBar1"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/splashTextView1"
		android:layout_above="@id/splashProgressBar1"
		android:layout_centerInParent="true"
		android:layout_marginBottom="@dimen/splash_txt1prog_mbottom"/>

	<TextView
		android:layout_height="wrap_content"
		android:text="@string/app_name"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:textSize="@dimen/splash_txt2judul_textsize"
		android:id="@+id/splashTextView2"
		android:layout_above="@id/splashTextView1"
		android:layout_centerInParent="true"
		android:layout_marginBottom="@dimen/splash_txt2judul_mbottom"/>

	<ImageView
		android:layout_height="@android:dimen/thumbnail_height"
		android:layout_width="@android:dimen/thumbnail_width"
		android:src="@drawable/ic_splash"
		android:layout_centerInParent="false"
		android:id="@+id/splashImageView"
		android:layout_above="@id/splashTextView2"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="@dimen/splash_imageview_mbottom"/>

</RelativeLayout>

